---
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <div>
        <div class="solarsystem">
            <a href="DetailsPlanet#mercury" x-on:click="activeTab = 0">
                <img class="mercure" src="/img/mercure.png"/>
            </a>
            <a href="DetailsPlanet#venus" x-on:click="activeTab = 1">
                <img class="venus" src="/img/venus.png"/>
            </a>
            <a href="DetailsPlanet#terre" x-on:click="activeTab = 2">
                <img class="terre" src="/img/terre.png"/>
            </a>
            <a href="DetailsPlanet#mars" x-on:click="activeTab = 3">
                <img class="mars" src="/img/mars.png"/>
            </a>
            <a href="DetailsPlanet#jupiter" x-on:click="activeTab = 4">
                <img class="jupiter" src="/img/jupiter.png"/>
            </a>
            <a href="DetailsPlanet#saturne" x-on:click="activeTab = 5">
                <img class="saturne" src="/img/saturne.png"/>
            </a>
            <a href="DetailsPlanet#uranus" x-on:click="activeTab = 6">
                <img class="uranus" src="img/uranus.png"/>
            </a>
            <a href="DetailsPlanet#neptune" x-on:click="activeTab = 7">
                <img class="neptune" src="/SpaceProject/img/neptune.png"/>
            </a>
        </div>
        <img class="soleil" src="img/Sunpart.png"/>
    </div>
</Layout>
<style>
 :root {
    --size-mercury:20px;
    --size-venus:30px;
    --size-terre:45px;
    --size-mars:40px;
    --size-jupiter:100px;
    --size-saturne:200px;
    --size-uranus:100px;
    --size-neptune:75px;
 }
    .solarsystem {
        position: relative;
        display:flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        height: 98vh;
        gap: 64px;
        z-index: 2;
        
    }

    .soleil {
        position: absolute;
        height: 99%;
        top: 0;
        z-index: 1;
        background: transparent;
    }
    .mercure {
        width: var(--size-mercury);
        height: var(--size-mercury);
        transition: 200ms;
        
    }
    .mercure:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
    }
    .venus {
        width: var(--size-venus);
        height: var(--size-venus);
        transition: 200ms;
    }
    .venus:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
    }
    .terre {
        width: var(--size-terre);
        height: var(--size-terre);
        transition: 200ms;
    }
    .terre:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
    }
    .mars {
        width: var(--size-mars);
        height: var(--size-mars);
        transition: 200ms;
    }
    .mars:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
    }
    .jupiter {
        width: var(--size-jupiter);
        height: var(--size-jupiter);
        margin-left: 64px;
        transition: 200ms;
    }
     .jupiter:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
     }  
    
    .saturne {
        width: var(--size-saturne);
        height: var(--size-saturne);
        transition: 200ms;
    }
        .saturne:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
     }  
    
    
    .uranus {
        width: var(--size-uranus);
        height: var(--size-uranus);
        transition: 200ms;

    }
    .uranus:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
     }  
    
    .neptune {
        width: var(--size-neptune);
        height: var(--size-neptune);
        transition: 200ms;

    }
    .neptune:hover {
        cursor: pointer;
        scale: 1.2;
        transition: 200ms;
     }  
    

</style>
